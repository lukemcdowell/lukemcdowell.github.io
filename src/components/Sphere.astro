<canvas class="block size-50 sm:size-72 lg:size-96 fade-canvas" id="sphere-canvas"></canvas>

<script>
    import { createSphereScene } from '../lib/sphere.js';

    window.addEventListener('DOMContentLoaded', () => {
        const canvas = document.getElementById('sphere-canvas');
        if (canvas) {
            createSphereScene(canvas);
            requestAnimationFrame(() => canvas.classList.add('loaded'));
        }
    });
</script>
