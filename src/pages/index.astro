---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import Sphere from "../components/Sphere.astro";
---

<Layout>
	<div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-10 px-4 py-8 text-center sm:text-left">
		<Sphere />
		<div>
			<h1 class="text-2xl sm:text-xl font-bold text-lime-600">Luke McDowell</h1>
			<h2 class="text-lg text-gray-800">Software Engineer</h2>
			<ul class="flex flex-row gap-4 justify-center sm:block sm:list-disc underline sm:ml-6 mt-5 text-base text-gray-800 sm:text-lg">
				<li>
					<a href="/cv.pdf" target="_blank" class="hover:text-lime-700 transition-colors">CV</a>
				</li>
				<li>
					<a href="https://github.com/lukemcdowell/" target="_blank" class="hover:text-lime-700 transition-colors">GitHub</a>
				</li>
			</ul>

		</div>
	</div>
