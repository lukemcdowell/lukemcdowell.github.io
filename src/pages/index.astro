---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import Sphere from "../components/Sphere.astro";
import CurrentlyPlaying from '../components/CurrentlyPlaying';
---

<Layout>
	<div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-10 px-4 py-8 text-center sm:text-left">
		<Sphere />
		<div>
			<h1 class="text-3xl sm:text-3xl font-bold text-lime-700">Luke McDowell</h1>
			<h2 class="text-xl">Software Engineer</h2>

			<ul class="flex flex-row gap-4 justify-center sm:block sm:list-disc sm:ml-6 mt-2 text-base">
				<li>
					<a href="/cv.pdf" target="_blank">CV</a>
				</li>
				<li>
					<a href="https://github.com/lukemcdowell/" target="_blank">GitHub</a>
				</li>
			</ul>

		</div>
	</div>

	<CurrentlyPlaying client:load />
</Layout>
