---
import Layout from '../layouts/Layout.astro';
import "../styles/global.css";
import Sphere from "../components/Sphere.astro";
import CurrentlyPlaying from '../components/CurrentlyPlaying';
---

<Layout>
	<div class="flex flex-col sm:flex-row justify-center items-center gap-4 sm:gap-10 px-4 py-8 text-center sm:text-left">
		<Sphere />
		<div class="site-text">
			<h1 class="text-3xl sm:text-3xl font-bold">Luke McDowell</h1>
			<h2>Software Engineer</h2>

			<ul class="flex flex-row gap-4 justify-center sm:block sm:list-disc sm:ml-4 highlight-text mt-2 text-base">
				<li>
					<a class="highlight-text" href="/cv.pdf" target="_blank">CV</a>
				</li>
				<li>
					<a class="highlight-text" href="https://github.com/lukemcdowell/" target="_blank">GitHub</a>
				</li>
			</ul>

		</div>
	</div>

	<div class="fixed bottom-10 sm:bottom-20 left-1/2 -translate-x-1/2 z-50 w-[calc(100%-2rem)] max-w-lg">
		<CurrentlyPlaying client:load />
	</div>
</Layout>
